{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "Backend/**/*.csproj",
            "Remora.Discord/*.csproj",
            "Remora.Discord.*/*.csproj"
          ],
          "exclude": ["**/bin/**", "**/obj/**"],
          "src": ".."
        }
      ],
      "properties": {
        "TargetFramework": "net6.0"
      },
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.yml"],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": ["**.{md,yml}"],
        "src": "input"
      }
    ],
    "resource": [
      {
        "files": ["**/images/**"],
        "exclude": ["**/obj/**", "**.meta"],
        "src": "input"
      },
      {
        "files": ["langwordMapping.yml"]
      }
    ],
    "overwrite": [],
    "xrefService": ["https://xref.docs.microsoft.com/query?uid={uid}"],
    "postProcessors": ["ExtractSearchIndex"],
    "globalMetadata": {
      "_appName": "Remora.Discord",
      "_appTitle": "Remora.Discord",
      "_appLogoPath": "images/logo.svg",

      "_enableSearch": true,

      "_gitContribute": {
        "branch": "master",
        "apiSpecFolder": null
      }
    },
    "fileMetadata": {
      "keywords": {
        "obj/api/**": ["API", "Reference"]
      }
    },
    "dest": "output",
    "markdownEngineName": "markdig",
    "template": ["default", "templates/discordfx"]
  }
}
